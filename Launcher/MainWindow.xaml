<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="MainWindow" Height="550" Width="1000">

    <Grid>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="511" VerticalAlignment="Top" Width="40" Margin="0,39,0,0" Background="#636363" />
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="40" VerticalAlignment="Top" Width="1000" Background="#636363" MouseLeftButtonDown="Tollbar_MouseDown" Margin="0,-1,0,0"/>
        <ProgressBar Name="downloadbar" HorizontalAlignment="Left" Height="30" Margin="40,520,0,0" VerticalAlignment="Top" Width="960" Minimum="0" Maximum="100" Value="0"/>
        <TextBlock Name="TextDownload"  HorizontalAlignment="Left" Margin="43,521,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="20" Width="314" Height="29"/>
        <Button Content="Играть" HorizontalAlignment="Left" Height="28" Margin="808,492,0,0" VerticalAlignment="Top" Width="192" MouseDown="PlayButton_MouseDown"/>
    </Grid>
</Window>
